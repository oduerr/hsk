{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Vitest (single file, debug-safe)",
        "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
        "args": [
          "run",
          "--inspect-brk",
          "--no-file-parallelism",
          "--pool=forks"
        ],
        "console": "integratedTerminal",
        "autoAttachChildProcesses": true,
        "skipFiles": ["<node_internals>/**"]
      },
     
          {
            "name": "Debug Web App (attach to Live Server)",
            "type": "pwa-chrome",           // or "pwa-msedge"
            "request": "launch",
            "url": "http://127.0.0.1:5500/index.html",
            "webRoot": "${workspaceFolder}", // maps files -> breakpoints
            "sourceMaps": true
          }
        ]
  }

  