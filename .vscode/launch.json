{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Vitest (single file, debug-safe)",
        "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
        "args": [
          "run",
          "--inspect-brk",
          "--no-file-parallelism",
          "--pool=forks"
        ],
        "console": "integratedTerminal",
        "autoAttachChildProcesses": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }